<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopping_cart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/shoppingicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaceOrder"
            android:label="@string/title_activity_place_order" >
        </activity>
        <activity
            android:name=".CancelOrder"
            android:label="@string/title_activity_cancel_order" >
        </activity>
        <activity
            android:name=".ViewOrder"
            android:label="@string/title_activity_view_order" >
        </activity>
    </application>

</manifest>
